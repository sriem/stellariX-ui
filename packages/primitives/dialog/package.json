{
    "name": "@stellarix/dialog",
    "version": "0.0.1",
    "description": "A headless dialog component for StellarIX UI",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "sideEffects": false,
    "license": "MIT",
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup",
        "dev": "tsup --watch",
        "clean": "rimraf dist",
        "typecheck": "tsc --noEmit",
        "lint": "eslint \"src/**/*.ts*\"",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "dependencies": {
        "@stellarix/core": "workspace:*",
        "@stellarix/utils": "workspace:*"
    },
    "devDependencies": {
        "eslint": "^8.46.0",
        "rimraf": "^5.0.1",
        "tsup": "^7.2.0",
        "typescript": "^5.1.6"
    },
    "publishConfig": {
        "access": "public"
    }
}